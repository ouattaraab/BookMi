APP_NAME=BookMi
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_CI

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=bookmi
DB_USERNAME=bookmi
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

CORS_ALLOWED_ORIGINS=https://bookmi.ci,https://admin.bookmi.ci

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@bookmi.ci"
MAIL_FROM_NAME="${APP_NAME}"

SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0

PAYSTACK_SECRET_KEY=sk_test_
PAYSTACK_WEBHOOK_SECRET=   # Same value as PAYSTACK_SECRET_KEY — Paystack signs webhooks with your secret key (HMAC-SHA512)
PAYMENT_CALLBACK_URL=https://bookmi.click/client/bookings/payment/callback

PASSWORD_RESET_URL=https://bookmi.click/reset-password

FEDAPAY_SECRET_KEY=sk_sandbox_
FEDAPAY_PUBLIC_KEY=pk_sandbox_

VITE_APP_NAME="${APP_NAME}"

# ── Firebase (backend SDK — OAuth2 service account) ────────────────────────
FIREBASE_CREDENTIALS=storage/app/firebase-credentials.json

# ── Firebase Web SDK (admin panel web push notifications) ───────────────────
# Obtenir ces valeurs dans Firebase Console → Paramètres du projet → Général → Vos applications
# Obtenir FIREBASE_VAPID_KEY : Firebase Console → Cloud Messaging → Configuration web → Générer une paire de clés
FIREBASE_WEB_API_KEY=your_firebase_web_api_key
FIREBASE_WEB_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_WEB_PROJECT_ID=your-project-id
FIREBASE_WEB_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_WEB_MESSAGING_SENDER_ID=000000000000
FIREBASE_WEB_APP_ID=1:000000000000:web:xxxxxxxxxxxxxxxx
FIREBASE_VAPID_KEY=your_vapid_key_here
